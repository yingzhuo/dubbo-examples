<?xml version="1.0" encoding="UTF-8"?>
<included>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}]%-5level %logger{72}[%L] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="de" additivity="true" level="trace"/>
    <logger name="org.springframework" additivity="true" level="info"/>
    <logger name="org.hibernate.validator" additivity="true" level="info"/>
    <logger name="org.springframework.context.support.PostProcessorRegistrationDelegate$BeanPostProcessorChecker"
            additivity="true" level="warn"/>
    <logger name="org.apache.catalina" additivity="true" level="warn"/>
    <logger name="org.apache.coyote" additivity="true" level="warn"/>
    <logger name="io.micrometer" additivity="true" level="info"/>
    <logger name="org.jboss.logging" additivity="true" level="warn"/>
    <logger name="org.apache.zookeeper" additivity="true" level="warn"/>
    <logger name="org.apache.curator" additivity="true" level="warn"/>
    <logger name="org.apache.dubbo" additivity="true" level="warn"/>
    <logger name="com.alibaba.spring" additivity="true" level="warn"/>
    <logger name="io.netty" additivity="true" level="warn"/>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>

</included>